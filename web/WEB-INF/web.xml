<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>ReadServlet</servlet-name>
        <servlet-class>com.assignment.controller.ReadServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>BorrowServlet</servlet-name>
        <servlet-class>com.assignment.controller.BorrowServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ReadServlet</servlet-name>
        <url-pattern>/book</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BorrowServlet</servlet-name>
        <url-pattern>/book/borrow</url-pattern>
    </servlet-mapping>
</web-app>